<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ferka.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/email_tb"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="66dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/password_tb"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/email_tb"
            android:layout_alignStart="@+id/email_tb"
            android:layout_below="@+id/email_tb"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/loginButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/password_tb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:onClick="LoginWebservice"
            android:text="Login" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
